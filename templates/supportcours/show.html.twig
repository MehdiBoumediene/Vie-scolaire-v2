{% extends 'base.html.twig' %}

{% block title %}modules
{% endblock %}

{% block body %}
	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}


		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="lnr-users icon-gradient bg-strong-bliss"></i>
							</div>
							<div>
								{{ module.nom }}


								<div class="page-title-subheading" style="opacity: 1;">

									Créée Le
									{{ module.createdAt ? module.createdAt|date('Y-m-d H:i') : '' }}
									Par
									{{ module.createdBy }}
								</div>
							</div>
						</div>
						<div class="page-title-actions">

							<div class="d-inline-block dropdown">
								<a href="{{path('app_supportcours')}}">
									<button class="mb-2 mr-2 btn btn-shadow btn-outline-2x btn-outline-secondary">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-fw" aria-hidden="true" title="Copy to use arrow-circle-left"></i>
										</span>
										Retour à la liste
									</button>


								</a>
							</div>
						</div>
					</div>
				</div>

				<div class="tabs-animation"></div>
				<br>
				<div class="row">
					<div class="col-md-12">
						<div class="main-card mb-3 card">
							<div class="card-header">Documents</div>
							<div class="card-body">
								<div class="row">
									{% for file in module.files %}

										<div class="col-md-3" style="text-align:center;">
											{% if file.name | split('.')[1] == 'docx' %}
												<a href="https://docs.google.com/gview?url={{ app.request.getSchemeAndHttpHost() }}{{asset('uploads')}}/{{file.name}}" target="blank_">
													<img src="{{asset('word.jpg')}}" width="130">
													<br>
													Fichier-{{file.id}}

												</a>
											{% elseif  file.name | split('.')[1] == 'xls'  %}
												<a href="https://docs.google.com/gview?url=https://lms.sigmaformations.fr{{asset('uploads')}}/{{file.name}}" target="blank_">
													<img src="{{asset('excel.png')}}" width="130">
													<br>
													{{file.nom}}.xls

												</a>
											{% elseif  file.name | split('.')[1] == 'xlsx'  %}
												<a href="https://docs.google.com/gview?url=https://lms.sigmaformations.fr{{asset('uploads')}}/{{file.name}}" target="blank_">
													<img src="{{asset('excel.png')}}" width="130">
													<br>
													{{file.nom}}.xlsx


												</a>
											{% elseif  file.name | split('.')[1] == 'pptx'  %}
												<a href="https://docs.google.com/gview?url=https://lms.sigmaformations.fr{{asset('uploads')}}/{{file.name}}" target="blank_">
													<img src="{{asset('PowerPoint.png')}}" width="130">
													<br>
													{{file.nom}}.pptx


												</a>
											{% elseif  file.name | split('.')[1] == 'ppt'  %}
												<a href="https://docs.google.com/gview?url=https://lms.sigmaformations.fr{{asset('uploads')}}/{{file.name}}" target="blank_">
													<img src="{{asset('PowerPoint.png')}}" width="130">
													<br>
													{{file.nom}}.ppt


												</a>

											{% elseif  file.name | split('.')[1] == 'pptm'  %}
												<a href="https://docs.google.com/gview?url=https://lms.sigmaformations.fr{{asset('uploads')}}/{{file.name}}" target="blank_">
													<img src="{{asset('PowerPoint.png')}}" width="130">
													<br>
													{{file.nom}}.pptm


												</a>
											{% elseif  file.name | split('.')[1] == 'pdf'  %}
												<a href="https://docs.google.com/gview?url=https://lms.sigmaformations.fr{{asset('uploads')}}/{{file.name}}" target="blank_">
													<img src="{{asset('pdf.png')}}" width="100">
													<br>
													{{file.nom}}.pdf


												</a>


											{% endif %}
										</div>


									{% endfor %}
								</div>
							</div>

						</div>

					</div>


				</div>

				<div class="row">
					<div class="col-md-12">
						<div class="main-card mb-3 card">
							<div class="card-header">Videos</div>
							<div class="card-body">
								{% for media in module.documents %}
									<video width="100%" height="540" controls>
										<source src="{{asset('uploads')}}/{{media.name}}" type="video/mp4">
										Your browser does not support the video tag.
									</video>
								{% endfor %}
							</div>

						</div>

					</div>


				</div>


			</div>

			{{ block("Footer", "Menus/Footer.html.twig") }}


		{% endblock %}
