{% extends 'base.html.twig' %}

{% block title %}Etudiants
{% endblock %}

{% block body %}

	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}


		<div class="app-main__outer">

			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="lnr-users icon-gradient bg-strong-bliss"></i>
							</div>
							<div>Mes apprenants
								<div class="page-title-subheading">Gestion des apprenants</div>
							</div>
						</div>
						<div class="page-title-actions"></div>
					</div>
				</div>

				<div class="tabs-animation">
					<div class="main-card mb-3 card">
						<div class="card-body">
							<div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">

								<div class="row">
									<div class="col-sm-12">
										<table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">
											<thead>
												<tr role="row">

													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Apprenant</th>
													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Téléphone</th>
													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Email</th>


												</tr>
											</thead>
											<tbody>

												{% for classe in classes %}

													{% for etudiant in  classe.etudiants %}


														<tr role="row" class="odd">
															<td class="sorting_1 dtr-control">
																<a href="{{path('app_etudiants_show',{id:etudiant.id})}}">{{etudiant.nom}}</a>

															</td>
															<td class="sorting_1 dtr-control">
																<a href="{{path('app_etudiants_show',{id:etudiant.id})}}">{{etudiant.telephone}}</a>

															</td>
															<td class="sorting_1 dtr-control">
																<a href="{{path('app_etudiants_show',{id:etudiant.id})}}">{{etudiant.email}}</a>

															</td>


														</tr>


													{% endfor %}

												{% endfor %}
											</tbody>
										</tbody>
									</table>
								</div>
							</div>


						</div>
					</div>
				</div>


			</div>
		</div>

	</div>

</div>
{{ block("Footer", "Menus/Footer.html.twig") }}{% endblock %}
