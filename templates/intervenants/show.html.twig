{% extends 'base.html.twig' %}

{% block title %}Intervenants
{% endblock %}

{% block body %}
	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}
		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="lnr-users icon-gradient bg-strong-bliss"></i>
							</div>
							<div>
								{{ intervenant.nom }}
								{{ intervenant.prenom }}
								<div class="page-title-subheading" style="opacity: 1;">

									Créée Le
									{{ intervenant.createdAt ? intervenant.createdAt|date('Y-m-d H:i') : '' }}
									Par
									{{ intervenant.createdBy }}
								</div>
							</div>
						</div>
						<div class="page-title-actions">

							<div class="d-inline-block dropdown">
								<a href="{{ path('app_intervenants_index') }}">
									<button class="mb-2 mr-2 btn btn-shadow btn-outline-2x btn-outline-secondary">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-fw" aria-hidden="true" title="Copy to use arrow-circle-left"></i>
										</span>
										Retour à la liste
									</button>

								</a>
								<button class="mb-2 mr-2 btn-outline-2x btn btn-shadow-warning btn-outline-warning">
									<span class="btn-icon-wrapper pr-2 opacity-7">
										<i class="fa fa-fw" aria-hidden="true" title="Copy to use edit"></i>
									</span>
									Modifier
								</button>

								{{ include('intervenants/_delete_form.html.twig') }}

							</div>
						</div>
					</div>
				</div>

				<div class="tabs-animation">
					<div class="row">
						<div class="col-md-6">
							<div class="main-card mb-3 card">
								<div class="card-header">Informations</div>
								<div class="card-body">
									<p>
										<b>Nom :</b>
										{{intervenant.nom}}</p>
									<p>
										<b>Prenom :</b>
										{{intervenant.prenom}}</p>
									<p>
										<b>Ville :</b>
										{{ intervenant.ville.nom }}</p>
								</p>
								<p>
									<b>Code postal :</b>
									{{ intervenant.codepostale.nom }}</p>
							</p>
							<p>
								<b>Adresse :</b>
								{{ intervenant.adresse }}</p>
							<p>
								<b>Téléphone :</b>
								{{intervenant.telephone}}</p>
							<p>
								<b>Email :</b>
								{{intervenant.email}}</p>

						</div>

					</div>

				</div>
				<div class="col-md-6">
					<div class="main-card mb-3 card">
						<div class="card-body">
							<h5 class="card-title">Classes</h5>
							<ul class="list-group list-group-flush">

								<a href="javascript:void(0);" class="list-group-item">
									{{intervenant.classes.nom}}
									-
									{% for bloc in intervenant.classes.blocs %}
										{{bloc.nom}}
									{% endfor %}
								</a>

							</ul>
						</div>
					</div>
				</div>

				<div class="col-md-6">
					<div class="main-card mb-3 card">
						<div class="card-body">
							<h5 class="card-title">Apprenants</h5>
							<ul class="list-group list-group-flush">
								{% for etudiant in intervenant.classes.etudiants %}
									<a href="javascript:void(0);" class="list-group-item">
										{{ etudiant.nom}}
									</a>
								{% endfor %}

							</ul>
						</div>
					</div>
				</div>
				<div class="col-md-6">
					<div class="main-card mb-3 card">
						<div class="card-body">
							<h5 class="card-title">Modules</h5>
							<ul class="list-group list-group-flush">


								{% for module in modules %}
									{{module.nom}}
								{% endfor %}


							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{ block("Footer", "Menus/Footer.html.twig") }}
	{% endblock %}
