{% extends 'base.html.twig' %}

{% block title %}Progressions & Resultats
{% endblock %}

{% block body %}

	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}


		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="lnr-users icon-gradient bg-strong-bliss"></i>
							</div>
							<div>Progressions & resultats
								<div class="page-title-subheading">Informations</div>
							</div>
						</div>
						<div class="page-title-actions">
							{% if is_granted('ROLE_INTERVENANT', 'ROLE_ADMIN')  %}{% endif %}

						</div>
					</div>
				</div>

				<div class="tabs-animation">
					<div class="row">

						<div class="col-md-12">
							<div class="main-card mb-3 card">
								<div class="card-body">
									{% for etudiant in etudiants %}

										{% for bloc in etudiant.classes.blocs %}
											<button class="accordion bloc">{{bloc.nom}}</button>
											<div class="panel">
												{% for module in bloc.modules %}
													<a href="{{path('app_supportcours_show',{id:module.id })}}">
														<button class="accordion module">{{module.nom}}</button>
													</a>
												{% endfor %}
											</div>
										{% endfor %}

									{% endfor %}
								</div>
							</div>
						</div>


					</div>


				</div>
			</div>

		</div>

	{% endblock %}
