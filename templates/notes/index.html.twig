{% extends 'base.html.twig' %}

{% block title %}Notes
{% endblock %}

{% block body %}

	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}


		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="lnr-users icon-gradient bg-strong-bliss"></i>
							</div>
							<div>Notes
								<div class="page-title-subheading">Notes des apprenants</div>
							</div>
						</div>
						<div class="page-title-actions">

							<div class="d-inline-block dropdown">
								<a href="{{ path('app_notes_new') }}">
									<button class="btn-shadow btn btn-success">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-plus fa-w-20"></i>
										</span>
										Ajouter une note
									</button>
								</a>
							</div>
						</div>
					</div>
				</div>

				<div class="tabs-animation">
					<div class="main-card mb-3 card">
						<div class="card-body">
							<div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">

								<div class="row">
									<div class="col-sm-12">
										<table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">
											<thead>
												<tr role="row">


													<th>Id</th>
													<th>Note</th>
													<th>Coefmodule</th>
													<th>Coefbloc</th>
													<th>Moy</th>
													<th>Moygeneral</th>
													<th>actions</th>

												</tr>
											</thead>
											<tbody>

												{% for note in notes %}
													<tr>
														<td>{{ note.id }}</td>
														<td>{{ note.note }}</td>
														<td>{{ note.coefmodule }}</td>
														<td>{{ note.coefbloc }}</td>
														<td>{{ note.moy }}</td>
														<td>{{ note.moygeneral }}</td>
														<td>
															<a href="{{ path('app_notes_edit', {'id': note.id}) }}">edit</a>
														</td>
													</tr>
												{% else %}
													<tr role="row" class="odd">
														<td class="sorting_1 dtr-control" colspan="6">Aucun resultat</td>
													</tr>
												{% endfor %}

											</tbody>

										</table>
									</div>
								</div>


							</div>
						</div>
					</div>


				</div>
			</div>

		</div>
	</div>
	{{ block("Footer", "Menus/Footer.html.twig") }}
{% endblock %}
