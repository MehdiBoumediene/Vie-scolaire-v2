{% extends 'base.html.twig' %}

{% block title %}Classes{% endblock %}

{% block body %}
   {{ block("MenuTop", "Menus/MenuTop.html.twig") }}
   <div class="app-main">
    {{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}


     <div class="app-main__outer">
                <div class="app-main__inner">
                    <div class="app-page-title">
                        <div class="page-title-wrapper">
                            <div class="page-title-heading">
                                <div class="page-title-icon">
                                    <i class="lnr-users icon-gradient bg-strong-bliss"></i>
                                </div>
                                <div>Classe {{ class.nom }} - {% for bloc in class.blocs %}
                                    {{ bloc.nom }}
                                     {% endfor %}
                                    <div class="page-title-subheading" style="opacity: 1;">
                                 
                                     Créée Le {{ class.createdAt ? class.createdAt|date('Y-m-d H:i') : '' }} Par {{ class.createdBy }}
                                    </div>
                                </div>
                            </div>
                           <div class="page-title-actions">
                        
                            <div class="d-inline-block dropdown">
                            <a href="{{ path('app_classes_index') }}">
                               <button  class="mb-2 mr-2 btn btn-shadow btn-outline-2x btn-outline-secondary">
                                    <span class="btn-icon-wrapper pr-2 opacity-7">
                                    <i class="fa fa-fw" aria-hidden="true" title="Copy to use arrow-circle-left"></i>
                                    </span>
                                    Retour à la liste
                                </button>
                                </a>
                                 <a href="{{ path('app_classes_edit',{id:class.id}) }}">
                                <button  class="mb-2 mr-2 btn-outline-2x btn btn-shadow-warning btn-outline-warning">
                                    <span class="btn-icon-wrapper pr-2 opacity-7">
                                        <i class="fa fa-fw" aria-hidden="true" title="Copy to use edit"></i>
                                    </span>
                                    Modifier
                                </button>
                                
                                {{ include('classes/_delete_form.html.twig') }}

                             
                            </div>
                        </div>
                        </div>
                    </div>
               
           <div class="tabs-animation"> 
           <div class="row">
            
                <div class="col-md-6">
                    <div class="main-card mb-3 card">
                        <div class="card-body">
                            <h5 class="card-title">Intervenants</h5>
                            <ul class="list-group list-group-flush">
                                  
                                  	{% for intervenant in intervenants %}
                                      
                                      <a href="{{path('app_intervenants_show',{id:intervenant.id})}}" class="list-group-item">{{intervenant.prenom}} {{intervenant.nom}}</a>
						        
                                        {% endfor %}
                                 
                                

                            
                            </ul>
                        </div>
                    </div>
                </div>

                   <div class="col-md-6">
                    <div class="main-card mb-3 card">
                        <div class="card-body">
                            <h5 class="card-title">Etudiants</h5>
                            <ul class="list-group list-group-flush">
                                 {% for etudiant in etudiants %}
                                 
                                  <a href="{{path('app_etudiants_show',{id:etudiant.id})}}" class="list-group-item">{{etudiant.prenom}} {{etudiant.nom}}</a>

                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>

                     <div class="col-md-6">
                    <div class="main-card mb-3 card">
                        <div class="card-body">
                            <h5 class="card-title">Modules</h5>
                            <ul class="list-group list-group-flush">
                                {% for module in modules %}
                                 
                                  <a href="{{path('app_modules_show',{id:module.id})}}" class="list-group-item">{{module.nom}}</a>

                                {% endfor %}
                     
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            </div>
</div>
    

  



    
{% endblock %}
