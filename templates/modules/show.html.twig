{% extends 'base.html.twig' %}

{% block title %}modules
{% endblock %}

{% block body %}
	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}


		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="lnr-users icon-gradient bg-strong-bliss"></i>
							</div>
							<div>Module
								{{ module.nom }}


								<div class="page-title-subheading" style="opacity: 1;">

									Créée Le
									{{ module.createdAt ? module.createdAt|date('Y-m-d H:i') : '' }}
									Par
									{{ module.createdBy }}
								</div>
							</div>
						</div>
						<div class="page-title-actions">

							<div class="d-inline-block dropdown">
								<a href="{{ path('app_modules_index') }}">
									<button class="mb-2 mr-2 btn btn-shadow btn-outline-2x btn-outline-secondary">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-fw" aria-hidden="true" title="Copy to use arrow-circle-left"></i>
										</span>
										Retour à la liste
									</button>
									<button class="mb-2 mr-2 btn-outline-2x btn btn-shadow-warning btn-outline-warning">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-fw" aria-hidden="true" title="Copy to use edit"></i>
										</span>
										Modifier
									</button>

									{{ include('modules/_delete_form.html.twig') }}

								</a>
							</div>
						</div>
					</div>
				</div>

				<div class="tabs-animation">
					<div class="row">
						<div class="col-md-6">
							<div class="main-card mb-3 card">
								<div class="card-body">
									<h5 class="card-title">Intervenants</h5>
									<ul class="list-group list-group-flush">

										{% for intervenant in intervenants %}

											<a href="{{path('app_intervenants_show',{id:intervenant.id})}}" class="list-group-item">{{intervenant.prenom}}
												{{intervenant.nom}}</a>

										{% endfor %}

									</ul>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="main-card mb-3 card">
								<div class="card-body">
									<h5 class="card-title">Apprenants</h5>
									<ul class="list-group list-group-flush">
										{% for etudiant in etudiants %}

											<a href="{{path('app_etudiants_show',{id:etudiant.id})}}" class="list-group-item">{{etudiant.prenom}}
												{{etudiant.nom}}
											</a>

										{% endfor %}

									</ul>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="main-card mb-3 card">
								<div class="card-body">
									<h5 class="card-title">Classes</h5>
									<ul class="list-group list-group-flush">


										<a href="javascript:void(0);" class="list-group-item">{{module.classes.nom}}</a>


									</ul>
								</div>
							</div>
						</div>


					</div>
				</div>
			</div>

			{{ block("Footer", "Menus/Footer.html.twig") }}


		{% endblock %}
